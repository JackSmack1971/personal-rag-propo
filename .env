# OpenRouter
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=openrouter/auto
OPENROUTER_REFERER=http://localhost:7860
OPENROUTER_TITLE=Personal RAG (Propositional)

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX=personal-rag
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# Embeddings
EMBED_MODEL=BAAI/bge-small-en-v1.5

# App
NAMESPACE=default
TOP_K=6

# ---- Cost Panel defaults (from your spreadsheet) ----
COST_MONTHLY_QS=6000
# Alternatives for monthly queries based on scenarios:
#   Low=900, High=30000
COST_PROMPT_TOKENS=300
COST_COMPLETION_TOKENS=300
COST_PRICE_PER_1K=0.000375
COST_BASE_FIXED=50.0

# ---- 2025 Stack Configuration ----
# Configuration file path
CONFIG_PATH=config.yaml

# Sentence-Transformers backend (torch/onnx/openvino)
SENTENCE_TRANSFORMERS_BACKEND=torch

# Gradio 5.x settings
GRADIO_ANALYTICS_ENABLED=false
GRADIO_SSR_ENABLED=true

# MoE Configuration (2025 features)
MOE_ENABLED=false
MOE_ROUTER_ENABLED=true
MOE_RERANKER_ENABLED=true

# Security settings
TRUST_REMOTE_CODE=false
MAX_FILE_SIZE_MB=10

# Performance settings
ENABLE_SPARSE_ENCODING=false
CACHE_EMBEDDINGS=true